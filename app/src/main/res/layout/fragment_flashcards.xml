<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <FrameLayout
        android:id="@+id/cardContainer"
        android:layout_width="wrap_content"
        android:layout_height="485dp"
        android:background="#F5F5F5"
        android:clickable="true">

        <ImageView
            android:id="@+id/rotateImageView"
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_rotate" />

        <TextView
            android:id="@+id/wordTextView"
            android:layout_width="match_parent"
            android:layout_height="484dp"
            android:gravity="center"
            android:text="@string/start_game_flashcards_fragment"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />

    </FrameLayout>

    <Button
        android:id="@+id/no_button_flashcards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardContainer"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:text="@string/dont_know_word_game_flashcards_fragment" />

    <Button
        android:id="@+id/yes_button_flashcards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardContainer"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="80dp"
        android:text="@string/know_word_game_flashcards_fragment" />

</RelativeLayout>